/* ^.c-list-2
-----------------------------------------------------------------------------*/

.c-list-1
	@extend .c-block-2
	grid()


.c-list-1__item
	@extends .c-block-2__item--v2
	col(6)

	&:nth-child(1),
	&:nth-child(3)
		+min('xl')
			col(3)

	&:nth-child(2),
	&:nth-child(4),
	&:nth-child(5)
		+min('xl')
			col(6)

	&:nth-child(1),
	&:nth-child(2),
	&:nth-child(3),
	&:nth-child(4)
		+min('m')
			col(6)

	&:nth-child(5)
		+min('m')
			col(12)

/* ^Fin - .c-list-2
-----------------------------------------------------------------------------*/





/* ^.c-list-2
-----------------------------------------------------------------------------*/

.c-list-2
	@extends .c-block-2


.c-list-2__box
	+min('m')
		grid()


.c-list-2__item
	@extends .c-block-2__item--v2

	&:nth-child(1),
	&:nth-child(3)
		+min('xl')
			col(3, 12)

	&:nth-child(2),
	&:nth-child(4),
	&:nth-child(5)
		+min('xl')
			col(6, 12)

	&:nth-child(1),
	&:nth-child(2),
	&:nth-child(3),
	&:nth-child(4)
		+min('m')
			col(1,2)

	&:nth-child(5)
		+min('m')
			col(1,1)


/* ^Fin - .c-list-2
-----------------------------------------------------------------------------*/
