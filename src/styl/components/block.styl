// 		font-family: 'IBM Plex Mono', monospace;
// 		font-weight: normal


/* ^Fin - .c-block-3
-----------------------------------------------------------------------------*/





/* ^.c-block-4
-----------------------------------------------------------------------------*/

.c-block-4
	grid-column: span 1
	display: flex
	align-items: flex-start
	justify-content: center
	flex-direction: column
	text-align: left
	// margin-top: 8rem;
	.c-block-4__img
		left:-100px
	.c-block-4__information
		margin-right: 30px
		margin-top: 20px
		color: $base-color
		font-family: 'IBM Plex Mono', monospace;
		font-size: 1.2rem

/* ^Fin - .c-block-4
-----------------------------------------------------------------------------*/





/* ^INICIO - .c-WE MAKE
-----------------------------------------------------------------------------*/
img-productos()
	background-size: 100% auto
	height: 100%
	background-size: cover
	background-repeat: no-repeat

.c-block-text-center
	display: flex
	top: 100px
	height: 90vh
	right: -50px
	position:fixed
	justify-content: center
	align-items: center
	p
		color: rgba($base-color, 0.04)
		font-family: 'Quantico', sans-serif
		font-size: 16rem
		font-weight: 400

.c-block-we-make
	grid-column: span 2
	margin-top: 200px
	margin-left: 3rem
	.c-block-we-make__heading
		color:$base-color
		font-family: 'Quantico', sans-serif
		font-size: 6.5rem
		font-weight: 400
	.c-block-we-make__information
		color:$base-color
		font-family: 'IBM Plex Mono', monospace;
		font-size: 1.6rem
		margin: 40px 0 90px 0
	li
		list-style: none
		width: 100%
		height: 300px
		position: relative
		overflow: hidden
		margin: 140px 0
		a
			h3
				font-size: 18px
				display none
		&:first-child
			margin-top: 0px
		&:hover .customers__caja-texto
			left: 0
		&:hover
			// Aplica el efecto en el boton
			a
				.btn__info-1
					top: 76%
					left: 0%
					transform: translateX(-100%) translateY(-24%)
				h3
					top 76%
					left 40%
					transform translateX(-60%) translateY(-24%)
					font-size: 24px
					text-align: left
					width: 60%
					display: block

		.customers__btn
			display: block
			text-decoration: none
			cursor: pointer
			transition: all .8s
			h3
				position: absolute
				top 76%
				left 40%
				transform translateX(-60%) translateY(-24%)
				font-size: 24px
				font-family: 'Quantico', sans-serif
				color: $base-color
				text-shadow 2px 2px 2px rgba(0,0,0,.4)
				transition: all .5s
				text-align: left
				width: 60%
				display: block
				hr
					height: 4px
					margin-top:2px
					margin-bottom: 10px
					background-color: $base-color
					border: none
				p
					font-family: 'IBM Plex Mono', monospace;
					font-weight: normal
					font-size: 20px

			&.hunt
				background: url(../images/the-hunt-banner.png) no-repeat center
				img-productos()
			&.gatorade
				background: url(../images/gatorade-banner.png) no-repeat center
				img-productos()
			&.classic
				background: url(../images/classic-banner.png) no-repeat center
				img-productos()
			&.havoline
				background: url(../images/havoline-banner.png) no-repeat center
				img-productos()

		.customers__caja-texto
			position: absolute
			top: 0%
			left: -100%
			width: 100%
			height: 100%
			background: rgba(#000, 0.6)
			transition: all .5s
			cursor: pointer
			h3
				position: absolute
				// top: 50%
				// left: 50%
				// transform: translateX(-50%) translateY(-50%)
				font-family: 'Quantico', sans-serif
				font-size: 24px
				color: $base-color
				hr
					height: 4px
					margin-top:2px
					margin-bottom: 10px
					background-color: $base-color
					border: none
				p
					font-family: 'IBM Plex Mono', monospace;
					font-weight: normal
					font-size: 20px

/* ^FIN - .c-WE MAKE
-----------------------------------------------------------------------------*/



/* ^INICIO - .c-block-portafolio
-----------------------------------------------------------------------------*/
.c-block-portafolio
	grid-column: 2/7
	margin-top: 7rem
	.c-block-portafolio__encabezado
		height: 482px
		width: auto
		background: $base-color
		display: flex
		align-items: center
		justify-content: center
		flex-direction: column
		.c-encabezado__btn
			position: fixed
			top: 7rem
			right: 0
			a
				color: #000
				background: $base4-color
				padding: 20px
				margin: 4px
				display: block
				&:hover
					color: $base-color
					background: $base3-color
				&:first-child
					margin-top: 0
					margin-right: 0
				&:last-child
					margin-bottom: 0
					margin-right: 0

		.c-encabezado__banner.banner-hunt
			background: url(../images/banner-the-hunt.png) no-repeat center
			background-size: 100% auto
			height: 268px
			width: 70%
			background-size: cover
			background-repeat: no-repeat
		.c-encabezado__info
			width: 70%
			.c-info__1
				color:$base4-color
				font-size: 1.6rem
			h1
				font-family: 'Quantico', sans-serif
				color: $base2-color
				font-size: 7rem
			.c-info__2
				font-family: 'roboto', monospace;
				color: $base2-color
				font-size: 1.6rem

	.c-block-portafolio__content
		width: 90%
		margin-top: 100px
		margin-left:30px
		display: flex
		.c-content__info
			width: 44%
			height: 100px
			margin: 20px
			.fa-arrow-left
				color: $base4-color
				font-size: 2rem
				&:hover
					color: $base-color
			p
				margin: 30px 0 80px 0
				font-family: 'IBM Plex Mono', monospace;
				color: $base-color
				font-size: 1.4rem
				font-weight: lighter
				letter-spacing: 1px
				word-spacing: 0.2em

		.c-content__slide
			width: 56%
			.main
				font-family Arial
				width 500px
				display block
				margin 0 auto

			h3
				background #fff
				color #3498db
				font-size 36px
				line-height 100px
				margin 10px
				padding 2%
				position relative
				text-align center

			.action
				display block
				margin 100px auto
				width 100%
				text-align center
				a
					display inline-block
					padding 5px 10px
					background #f30
					color #fff
					text-decoration none
					&:hover
						background #000

/* ^FIN - .c-block-portafolio
-----------------------------------------------------------------------------*/



/* ^posts
-----------------------------------------------------------------------------*/

.posts
	@extend .c-block-2
	grid()


.posts__article
	@extends .c-block-2__item
	col(6)

	&:nth-child(1)
		+min('m')
			col(3)

		+min('xl')
			col(4)

	&:nth-child(2)
		+min('m')
			col(9)

		+min('xl')
			col(6)
			col-offset(6)

	&:nth-child(3)
		+min('m')
			col(6)

		+min('xl')
			col(3)
			col-offset(1)

	&:nth-child(4)
		+min('m')
			col(6)

	&:nth-child(5)
		+min('m')
			col(12)

		+min('xl')
			col(2)

/* ^Fin - posts
-----------------------------------------------------------------------------*/





/* ^news
-----------------------------------------------------------------------------*/

.news
	@extend .c-block-2


.news__box
	+min('m')
		grid()


.news__article
	@extends .c-block-2__item

	&:nth-child(1)
		+min('m')
			col(3, 12)

		+min('xl')
			col(4, 12)

	&:nth-child(2)
		+min('m')
			col(9, 12)

		+min('xl')
			col(6,12)
			col-offset(2, 12)

	&:nth-child(3)
		+min('m')
			col(6, 12)

		+min('xl')
			col(3, 12)
			col-offset(1, 12)

	&:nth-child(4)
		+min('m')
			col(6, 12)

	&:nth-child(5)
		+min('m')
			col(1,1)

		+min('xl')
			col(2, 12)

/* ^Fin - news
-----------------------------------------------------------------------------*/





/* ^.gallery
-----------------------------------------------------------------------------*/

.gallery
	@extend .c-block-2
	grid($columns-movil:1)

	+min('m')
		grid($columns:2)

	+min('xl')
		grid($columns:3)

	> *
		@extends .c-block-2__item--v2


/* ^Fin - .gallery
-----------------------------------------------------------------------------*/





/* ^.photos
-----------------------------------------------------------------------------*/

.photos
	@extend .c-block-2


.photos__box

	+min('m')
		grid()

	> *
		@extends .c-block-2__item--v2

		+min('m')
			col(1,2)

		+min('xl')
			col(1,3)


/* ^Fin - .photos
-----------------------------------------------------------------------------*/
