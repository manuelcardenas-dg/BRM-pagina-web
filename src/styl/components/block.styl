/*----------------------------------------------------------------------------*
	$C-BLOCK
*----------------------------------------------------------------------------*/


/* ^.c-block-body
-----------------------------------------------------------------------------*/

.c-block-body
	background: #292828

.c-block-body-2
	width: 100%
	height: 100vh
	background-attachment: fixed
	background-image: url(../images/fondo-home.png)
	background-repeat: no-repeat
	background-size: cover

/* ^Fin - .c-block-body
-----------------------------------------------------------------------------*/

.c-global
	width:100%
	display: grid
	grid-gap: 20px
	grid-template-columns:repeat(6, 1fr)
	grid-template-row:repeat(1, 1fr)

/* ^.c-block-1
-----------------------------------------------------------------------------*/

.c-block-1
	grid-column: 2/7
	// margin-top: 8rem;
	display: flex
	align-items: center
	justify-content: center

	.fas.fa-tools
		color: $base3-color
		margin: 40px
		font-size: 5rem
	.c-block-1__construction
		color: $base-color
		font-family: 'Quantico', sans-serif
		font-size: 5rem
/* ^Fin - .c-block-1
-----------------------------------------------------------------------------*/





/* ^.c-block-2
-----------------------------------------------------------------------------*/

.c-block-2
	grid-column: span 2
	display: flex
	align-items: flex-start
	justify-content: center
	flex-direction: column
	text-align: left
	// margin-left: 3rem


.c-block-2__item
	padding: 30px 10px
	margin: 5px 0
	color: #fff

	+min('m')
		padding: 70px 10px

.c-block-2__item--v2
	@extends .c-block-2__item
	background: $base2-color

/* formulario*/
	.c-block-2
		.c-block-2__formulario
			display: block
			width:90%
			.c-block-2__formulario-items
				.formulario-items__form-group
					.form-group__form-control
						width:100%
						margin: 10px 0px

					.form-group__checkbox
						margin: 30px 0px
						font-family: 'IBM Plex Mono', monospace;
						font-size: 1.2rem
						&:hover a
							color: $base4-color

						[type="checkbox"]
							display none

						label
							padding-left 3em
							position relative
							&:before
								content ' '
								border solid 1px #9e9e9e
								border-radius 3px
								width 2rem
								height 2rem
								position absolute
								left 0px
								top -0.4rem
								transition all 0.2s
								transform rotate(0deg)

						[type="checkbox"]:checked
							& + label
								&:before
									border-color $base4-color
									color $base4-color
									content '\f00c'
									font-family FontAwesome
									font-size:2rem
									transform rotate(360deg)


					.form-group__btn-send
						padding:6px 70px
						background: $base4-color
						font-family: 'Quantico', sans-serif
						font-size: 1.6rem
						color: #173159
						font-weight: bold
						&:hover
							color: $base-color
							background: $base3-color

					input,
					textarea
						padding: 10px
						background: none
						border: 1px solid #858585
						font-family: 'IBM Plex Mono', monospace;

					button
						border: none

				.formulario-items__form-group--v2
					display: flex
					.form-group__form-control
						flex-direction: column
						margin: 10px
						width: 50%
						&:first-child
							margin-left:0px
						&:last-child
							margin-right:0px
					input
						padding: 10px
						background: none
						border: 1px solid #858585
						font-family: 'IBM Plex Mono', monospace;



/* ^Fin - .c-block-2
-----------------------------------------------------------------------------*/





/* ^.c-block-3
-----------------------------------------------------------------------------*/

.c-block-3
	grid-column: 2/5
	display: flex
	align-items: flex-start
	justify-content: center
	flex-direction: column
	text-align: left
	margin-left: 3rem
	// margin-top: 8rem;

.c-block-3__heading
	color:$base-color
	font-family: 'Quantico', sans-serif
	font-size: 6.5rem
	font-weight: 400

.c-block-3__information
	width: 60%
	color:$base-color
	font-family: 'IBM Plex Mono', monospace;
	font-size: 1.6rem
	margin: 40px 0 90px 0


.c-block-3__btn__1
	background: $base4-color
	color: #000
	margin-right: 10px
	&:hover
		background: $base3-color
		color: $base-color
.c-block-3__btn__2
	background: none
	border: solid 2px $base4-color
	color: $base-color
	margin-left: 10px
	&:hover
		border: solid 2px $base3-color
		color: $base-color

.c-block-3__btn__1,
.c-block-3__btn__2
	font-family: 'Quantico', sans-serif
	padding: 6px 60px
	font-weight: bold

.fa-linkedin-in,
.fa-whatsapp,
.fa-at,
.fa-map-marker-alt
	&:before
		color: $base4-color
		margin-right: 5px

.c-block-3__btn__info-contact
	display: inline-block
	color $base-color
	font-family: 'IBM Plex Mono', monospace;
	font-size: 1.2rem
	padding:20px 2px
	width: 220px
	// height: 60px
	&:hover
		color: $base4-color

// .c-block-3__btn
