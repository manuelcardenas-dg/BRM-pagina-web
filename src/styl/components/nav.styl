// ul
.c-nav-1
	display: flex
	flex-wrap: wrap

	+max('xl')
		justify-content: center

	li
		margin-left: 10px

		+max('xl')
			margin: 0 5px 5px 5px

		+max('s')
			width: 100%

		a
			display: block
			padding: 8px 16px
			border-radius: 50px
			background: #f0f0f0
			font-size: 1.5rem
			color: $base2-color

			+max('s')
				text-align: center



			&:hover
				background: darken(#f0f0f0, 6%)

			&.active
				background: $base-color
				color: #fff

